{
    "compilerOptions": {
        "rootDir": "src",
        "baseUrl": "src",
        "outDir": "dist",
        "module": "commonjs",
        "strict": false,
        "importHelpers": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "types": ["node"],
        "declaration": true,
        "typeRoots": ["node_modules/@types", "typings"],

        "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
    },
    "include": [
        "typings/**/*.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.json",
        "src/**/*.vue"
    ],
    "exclude": ["node_modules", "dist", "src/demo"]
}
